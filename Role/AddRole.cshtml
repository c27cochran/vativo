@model Vativo.UI.ViewModels.RoleViewModel
@{
    ViewBag.Title = ":: VativoRx :: Role";
}
<hr />
<h3>Add New Role</h3>

<form method="post">
    <div class="row">
        <div class="col-md-12 col-sm-6">
            <div class="contact-form">
                <div class="row">
                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        <label>User Type</label>
                        <select asp-for="UserType" class="form-control" asp-items="@((IEnumerable<SelectListItem>)ViewBag.UserTypeList)"></select>
                        <span asp-validation-for="UserType" class="Validation-Color"></span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        <label>Role Name</label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="Validation-Color"></span>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <input type="submit" value="Submit" class="btn btn-primary btn-round registerBtn" style="margin-top: 16px;" />
                </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class=@ViewBag.Class asp-validation-summary="ModelOnly"></div>
    </div>
</form>